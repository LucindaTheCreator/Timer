
# Nazvao sam Timer window StartScreen radi bolje ƒçitljivosti
# Maknuti sve deafult returnere kad se postave
# FONT U DESIGN DOKUMENTIMA- Lucida handwriting

#komentar

WindowManager:
    StartWindow:
    LoginWindow:
    SecondFormWindow:
    MainWindow:
    SubWindowBlank:
    SubWindowStats:
    SubWindowFacts:
    SettingsWindow:


# Primjer global settingsa za widget

<MDLabel>:
    font_name: "Fonts/Montserrat-Light.ttf"
<Button>:
    background_color: (0,0,0,0)
    color: (0,0,0,1)
<MDTextField>:
    mode: "round"
    halign: "center"
    fill_color_focus: (1,1,1,0.1)
    fill_color_normal: (255,255,255,1)
    size_hint: 0.9,1
    pos_hint: {"x":0.05}
    hint_text: ""
    font_size: "24dp"
# Prozori su inicijalizirani - treba promijeniti imena



<StartWindow>:
    name: "start"
    MDBoxLayout:
        orientation: "vertical"
        MDGridLayout:
            size_hint: 1, .1
            rows: 1
            cols: 3
            MDLabel:
                text: root.WelcomeText
            MDIconButton:
                on_release:
                    root.goto_window(6)

        MDFloatLayout:
            Button:
                pos_hint: {"x":.35, "y":.15}
                size_hint: .3,.54
                on_release:
                    #root.center_widget_clicked()
                    root.UtilLogin()
            Image:
                pos_hint: {"y":-0.1}
                source: "images/Start_SelectButtonNew.png"
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1,.2
            Image:
                source: "images/Bottom_Menu.png"
                size_hint: 2.49,2.47


<LoginWindow>:
    name: "login"
    spacing: 20
    MDBoxLayout:
        spacing: 40
        orientation: "vertical"
        MDLabel:
            text: "Timer"
            font_size: "36dp"
            color: "blue"
            font_name: "Fonts/LaBelleAurore-Regular.ttf"
            halign: "center"
            pos_hint: {"x":0}
        MDBoxLayout:
            spacing: 30
            orientation: "vertical"
            MDTextField:
                id: nameSurname
                mode: "round"
                hint_text: "ime i prezime:"
                helper_text: root.ErrNameText
                helper_text_mode: "persistent"
                helper_text_color_normal: "red"
                on_text:
                    root.verify_name(self)
            MDTextField:
                id: Email
                mode: "round"
                hint_text: "E-mail:"
                helper_text: root.ErrMailText
                helper_text_mode: "persistent"
                helper_text_color_normal: "red"
                on_text:
                    root.verify_email(self)
            MDRaisedButton:
                id: ageButton
                font_size: "18dp"
                size_hint_x: 0.6
                pos_hint: {"center_x":0.5}
                text: root.AgeText
                on_press:
                    root.OpenAgeGroup()
        MDBoxLayout:

            size_hint: 1,1
            MDFillRoundFlatButton:
                size_hint: 0.2,0.2
                pos_hint: {"y":0.1}
                id: "submit_button"
                disabled: root.DisabledSubmit
                text: "Submit"
                on_release:
                    root.submitLogin()



<SecondFormWindow>:
    name: "second_form"
    canvas.before:
        Rectangle:
            pos: 0, 0
            source: "images/SecondForm_Background.png"
            size: self.size
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 1,0.3
            spacing: 1
            orientation:"vertical"
            MDLabel:
                id: testLabel
                text: "Just one more step..."
                font_name: "Fonts/LaBelleAurore-Regular.ttf"
                font_size: "36dp"
                size_hint: 1,1
                pos_hint: {"center_x":.5}
                halign:"center"
                color: "blue"
            MDLabel:
                text: "Choose three fields \n that you want to \n monitor:"
                size_hint: 1, 1
                halign: "center"
                pos_hint: {"center_x":.5}
                color: "blue"
        MDFloatLayout:
            MDBoxLayout:
                spacing_y: 100
                size_hint: 1,0.43
                pos_hint: {"center_y":0.75}
                orientation: "vertical"
                MDTextField:
                    id: act1
                    mode: "round"
                    halign: "center"
                    fill_color_focus: (1,1,1,0.1)
                    hint_text: ""
                    size_hint: 0.9,1
                    max_text_length: 15
                    pos_hint: {"x":0.05}
                    font_size: "24dp"
                    on_text:
                        root.txtChk()


                Widget:
                MDTextField:
                    id: act2
                    mode: "round"
                    halign: "center"
                    max_text_length: 15
                    fill_color_focus: (1,1,1,0.1)
                    size_hint: 0.9,1
                    pos_hint: {"x":0.05}
                    hint_text: ""
                    font_size: "24dp"
                    on_text:
                        root.txtChk()


                Widget:
                MDTextField:
                    id: act3
                    mode: "round"
                    fill_color_focus: (1,1,1,0.1)
                    max_text_length: 15
                    halign: "center"
                    size_hint: 0.9,1
                    pos_hint: {"x":0.05}
                    hint_text: ""
                    font_size: "24dp"
                    on_text:
                        root.txtChk()

        MDBoxLayout:
            orientation: "vertical"
            padding: 25
            size_hint: 1, 0.15
            MDFillRoundFlatButton:
                id: submitAct
                text: "Start"
                disabled: True
                size_hint: 0.5,0.05
                pos_hint: {"x": 0.25}
                on_release:
                    root.SubmitArrangement()








