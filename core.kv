            pos_hint: {"center_x":.5,"center_y":.7}
            color: "black"
        #PLACEHOLDER
        Button:
            id: placeholderEventWidget
            size_hint: .72, .3
            background_color: "blue"
            pos_hint: {"center_x":.5,"center_y":.47}
        MDFillRoundFlatButton:
            id: StartTimerButton
            text: "Start"
            pos_hint: {"center_x":.5,"center_y":.25}
            size_hint: .4,.07
            font_size: "36dp"
            on_press:
                root.ActivateTimer()








