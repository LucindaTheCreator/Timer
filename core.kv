# Primjer global settingsa za widget

#ISOCP3 zamijeniti
<MDLabel>:
    font_name: "Fonts/Montserrat-Light.ttf"
<Button>:
    background_color: (0,0,0,0)
    color: (0,0,0,1)
<ImageButton>:
    background_color: (0,0,0,0)
    background_color: (0,0,0,0)
<MDTextField>:
    mode: "round"
    halign: "center"
    fill_color_focus: (1,1,1,0.1)
    fill_color_normal: (255,255,255,1)
    size_hint: 0.9,1
    pos_hint: {"x":0.05}
    hint_text: ""
    font_size: "24dp"
# Prozori su inicijalizirani - treba promijeniti imena



<StartWindow>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: 0, 0
            source: "images/Bottom_MenuNew.png"
            size: self.size

    #NE DIRATI :C
    MDFloatLayout:
        Button:
            pos_hint: {"y":0.9,"x":0}
            size_hint: 0.2,0.1
        Button:
            pos_hint: {"y":0.9,"x":0.8}
            size_hint: 0.2,0.1
            on_release:
                root.goto_window(6)
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.13
            ImageButton:
                source:"images/Bottom_MenuIcons/Home_icon.png"
                #on_release:
            ImageButton:
                source:"images/Bottom_MenuIcons/StatsPage_icon.png"
                #on_release:
            ImageButton:
                source:"images/Bottom_MenuIcons/Planner_icon.png"
                #on_release:
            ImageButton:
                source: "images/Bottom_MenuIcons/UserPage_icon.png"
                #on_release:



    MDBoxLayout:
        orientation: "vertical"
        MDGridLayout:
            size_hint: 1, .1
            rows: 1
            cols: 1
            MDLabel:
                text: root.WelcomeText
                halign: "center"



        MDFloatLayout:
            MDLabel:
                pos_hint: {"center_y":.7,"center_x":.5}
                font_name: "Fonts/Unbounded/Unbounded-Bold.ttf"
                font_size: "24dp"
                text: root.StartMotivationalLabel
                halign: "center"
                color: (0,0,0,0.7)
            Button:
                id: startPointerButton
                size_hint: 1,None
                pos_hint:
                height: img_placeholder_start.height
                pos_hint: img_placeholder_start.pos_hint
                on_release:
                    root.center_widget_clicked()
            Image:
                id: img_placeholder_start
                pos_hint: {"center_x":.5,"center_y":.4}
                size_hint: .9,.5
                allow_stretch:True
                keep_ratio:False
                source: "images/Start_SelectButtonNew.png"


<LoginWindow>:
    name: "login"
    spacing: 20
    MDBoxLayout:
        spacing: 40
        orientation: "vertical"
        MDLabel:
            text: "Timer"
            font_size: "36dp"
            color: "blue"
            font_name: "Fonts/LaBelleAurore-Regular.ttf"
            halign: "center"
            pos_hint: {"x":0}
        MDBoxLayout:
            spacing: 30
            orientation: "vertical"
            MDTextField:
                id: nameSurname
                mode: "round"
                hint_text: "ime i prezime:"
                helper_text: root.ErrNameText
                helper_text_mode: "persistent"
                helper_text_color_normal: "red"
                on_text:
                    root.verify_name(self)
            MDTextField:
                id: Email
                mode: "round"
                hint_text: "E-mail:"
                helper_text: root.ErrMailText
                helper_text_mode: "persistent"
                helper_text_color_normal: "red"
                on_text:
                    root.verify_email(self)
            MDRaisedButton:
                id: ageButton
                font_size: "18dp"
                size_hint_x: 0.6
                pos_hint: {"center_x":0.5}
                text: root.AgeText
                on_press:
                    root.OpenAgeGroup()
        MDBoxLayout:

            size_hint: 1,1
            MDFillRoundFlatButton:
                size_hint: 0.2,0.2
                pos_hint: {"y":0.1}
                id: "submit_button"
                disabled: root.DisabledSubmit
                text: "Submit"
                on_release:
                    root.submitLogin()



<SecondFormWindow>:
    name: "second_form"
    canvas.before:
        Rectangle:
            pos: 0, 0
            source: "images/SecondForm_Background.png"
            size: self.size
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 1,0.3
            spacing: 1
            orientation:"vertical"
            MDLabel:
                id: testLabel
                text: "Just one more step..."
                font_name: "Fonts/LaBelleAurore-Regular.ttf"
                font_size: "36dp"
                size_hint: 1,1
                pos_hint: {"center_x":.5}
                halign:"center"
                color: "blue"
            MDLabel:
                text: "Choose three fields \n that you want to \n monitor:"
                size_hint: 1, 1
                halign: "center"
                pos_hint: {"center_x":.5}
                color: "blue"
        MDFloatLayout:
            MDBoxLayout:
                spacing_y: 100
                size_hint: 1,0.43
                pos_hint: {"center_y":0.75}
                orientation: "vertical"
                MDTextField:
                    id: act1
                    mode: "round"
                    halign: "center"
                    fill_color_focus: (1,1,1,0.1)
                    hint_text: ""
                    size_hint: 0.9,1
                    max_text_length: 15
                    pos_hint: {"x":0.05}
                    font_size: "24dp"
                    on_text:
                        root.txtChk()


                Widget:
                MDTextField:
                    id: act2
                    mode: "round"
                    halign: "center"
                    max_text_length: 15
                    fill_color_focus: (1,1,1,0.1)
                    size_hint: 0.9,1
                    pos_hint: {"x":0.05}
                    hint_text: ""
                    font_size: "24dp"
                    on_text:
                        root.txtChk()


                Widget:
                MDTextField:
                    id: act3
                    mode: "round"
                    fill_color_focus: (1,1,1,0.1)
                    max_text_length: 15
                    halign: "center"
                    size_hint: 0.9,1
                    pos_hint: {"x":0.05}
                    hint_text: ""
                    font_size: "24dp"
                    on_text:
                        root.txtChk()

        MDBoxLayout:
            orientation: "vertical"
            padding: 25
            size_hint: 1, 0.15
            MDFillRoundFlatButton:
                id: submitAct
                text: "Start"
                disabled: True
                size_hint: 0.5,0.05
                pos_hint: {"x": 0.25}
                on_release:
                    root.SubmitArrangement()








<MainWindow>:
    name: "main"
    canvas.before:
        Rectangle:
            pos: 0, 0
            source: "images/Main_Window_Kanvas.png"
            size: self.size

    #NE DIRATI !!
    MDFloatLayout:
        Button:
            pos_hint: {"y":0.9,"x":0}
            size_hint: 0.2,0.1
        Button:
            pos_hint: {"y":0.9,"x":0.8}
            size_hint: 0.2,0.1
            on_release:
                root.goto_window(6)
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.13
            ImageButton:
                source:"images/Bottom_MenuIcons/Home_icon.png"
                #on_release:
            ImageButton:
                source:"images/Bottom_MenuIcons/WorkTime_icon.png"
                #on_release:
            ImageButton:
                source:"images/Bottom_MenuIcons/BreakTime_icon.png"
                #on_release:
            ImageButton:
                source:"images/Bottom_MenuIcons/noMotivation_icon.png"
